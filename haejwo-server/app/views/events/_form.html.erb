<%= form_for(@event, html: {class: 'list no-hairlines-md'}, remote: true) do |f| %>
  <ul>
    <li class="item-content item-input">
      <div class="item-inner">
        <div class="item-title item-floating-label">글제목</div>
        <div class="item-input-wrap">
          <%= f.text_field :title, placeholder: "글제목", autofocus: true %>
          <span class="input-clear-button"></span>
        </div>
      </div>
    </li>
    <li class="item-content item-input">
      <div class="item-inner">
        <div class="item-title item-floating-label">심부름 받을 건물</div>
        <div class="item-input-wrap">
          <%= f.text_field :place, placeholder: "건물이름" %>
          <span class="input-clear-button"></span>
        </div>
      </div>
    </li>
    <li class="item-content item-input">
      <div class="item-inner">
        <div class="item-title item-floating-label">상세위치</div>
        <div class="item-input-wrap">
          <%= f.text_field :detail_place, placeholder: "층수, 강의실 등" %>
          <span class="input-clear-button"></span>
        </div>
      </div>
    </li>
    <li class="item-content item-input">
      <div class="item-inner">
        <div class="item-title item-label">보상금액</div>
        <div class="item-input-wrap">
          <%= f.number_field :reward, min: 0, step: 100 %>
          <span class="input-clear-button"></span>
        </div>
      </div>
    </li>
    <li class="item-content item-input">
      <div class="item-inner">
        <div class="item-title item-label">제한시간</div>
        <div class="item-input-wrap">
          <%= f.datetime_local_field :time_limit %>
        </div>
      </div>
    </li>
    <li class="item-content item-input">
      <div class="item-inner">
        <div class="item-title item-floating-label">심부름 내용</div>
        <div class="item-input-wrap">
          <%= f.text_area :content, placeholder: "내용을 입력하세요..." %>
        </div>
      </div>
    </li>
  </ul>
  <%= f.submit "심부름 요청하기", class: "button button-fill-ios button-w-icon button-full", id: "event-submit-button" %>
<% end %>
