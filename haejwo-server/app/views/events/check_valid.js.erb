<% if @valid %>
  var path = window.location.hash
  if (path.includes("edit")) {
    var eventId = path.split('-')[2];
    $$('#event-form').attr("action", `/events/${eventId}`);
    $$('#event-form').attr("method", "patch");
  } else {
    $$('#event-form').attr("action", "/events");
  }

  $$('#event-submit-button').trigger('click');
<% else %>
  app.dialog.alert('<%= @msg %>', "");
<% end %>
