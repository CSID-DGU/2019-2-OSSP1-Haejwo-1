<% if @valid %>
  var path = window.location.hash;
  var submitBtn = null;
  var targetForm = null;
  if (path.includes("edit")) {
    var eventId = path.split('-')[2];
    targetForm = $$('#event-edit-form');
    submitBtn = $('#event-edit-submit-button');

    targetForm.prop("action", `/events/${eventId}`);
  } else {
    targetForm = $$('#event-form')
    submitBtn = $('#event-submit-button');

    targetForm.prop("action", "/events");
  }
setTimeout(function(){
  submitBtn.trigger('click');
  app.preloader.hide();
}, 300)
<% else %>
  app.preloader.hide();
  app.dialog.alert('<%= @msg %>', "");
<% end %>
