  <div class="message-avatar" style="background-image:url(<%= message.sender.thumbnail_url %>);"></div>
  <div class="message-content">
    <div class="message-name"><%= message.sender&.name %></div>
    <!-- <div class="message-header">Message header</div> -->
    <div class="message-bubble">
      <!-- <div class="message-text-header">Text header</div> -->
      <div class="message-text"><%= message.content %></div>
      <!-- <div class="message-text-footer">Text footer</div> -->
    </div>
  </div>
</div>
