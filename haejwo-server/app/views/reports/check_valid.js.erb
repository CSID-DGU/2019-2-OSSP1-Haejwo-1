<% if @valid %>
  var eventId = <%= @event.id %>
  var submitBtn = null;
  var targetForm = null;

  targetForm = $$('#report-form');
  submitBtn = $('#report-submit-button');

  targetForm.prop("action", "`/events/${eventId}/reports`");

  setTimeout(function() {
    submitBtn.trigger('click');
    app.preloader.hide();
  }, 300)
<% else %>
  app.preloader.hide();
  app.dialog.alert('<%= @msg %>', "");
<% end %>
